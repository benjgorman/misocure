<% if object.errors.any? %>
	<div id="error_explanation">
		<h4><%= pluralize(object.errors.count, "error") %>
			stopped this <%= object.class.to_s.underscore.humanize.downcase %>
			from being saved:</h4>
		<p>Please have another look at these areas:</p>
		<ul>
		<% object.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
		</ul>
		</div>
		<% end %>
			
