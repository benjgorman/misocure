<h4>Edit user</h4>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div>
	<%= gravatar_for @user %>
	<a href="http://gravatar.com/emails" class="button">change</a>
	</div>
	<div class = "field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	
	<div class = "field">
		<%= f.label :password_confirmation, "Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	
	<div class = "actions">
		<%= f.submit "Update", :class => "button"%>
	</div>
<% end %>
	
