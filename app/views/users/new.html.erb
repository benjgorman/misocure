<h4>Sign Up</h4>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div>
	<%= f.check_box :terms %>
	<%= f.label :terms, "I accept the terms of service" %><br />
	<%= link_to "Terms of Service", terms_path, :class => "button" %>
	</div>
	
	<div class="actions">
		<%= f.submit "Sign up", :class => "button"%>
	</div>
<% end %>
	