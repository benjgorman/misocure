
<table id="line_items">
  <tr>
    <th>Product</th>
    <th class="price">Unit Price</th>
  </tr>
  <% for line_item in order.line_items %>
    <tr>
      <td><%=h line_item.song.name %></td>
      <td class="price"><%= number_to_currency(line_item.song.price) %></td>
    </tr>
  <% end %>
  <tr>
    <td class="total price" colspan="4">
      Total: <%= number_to_currency order.total %>
    </td>
  </tr>
</table>